from bs4 import BeautifulSoup
import requests

url = 'https://en.wikipedia.org/wiki/List_of_largest_companies_in_Pakistan'

page = requests.get(url)

soup = BeautifulSoup(page.text, 'html')

print(soup)

<table class="wikitable sortable jquery-tablesorter">



table = soup.find_all('table')[1]

print(table)

titles = table.find_all('th' )

titles

titles_table = [title.text.strip() for title in titles]
print (titles_table)

import pandas as pd

df = pd.DataFrame(columns = titles_table)

column_data = table.find_all('tr')
print(column_data)

for row in column_data[1:]:
    row_data = row.find_all('td')
    rows = [data.text.strip() for data in row_data]
    length = len(df)
    df.loc[length] = rows

df

df.to_csv(r'C:\Users\malij\Downloads\companies.csv', index = False)
